{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    //модульная система
    "module": "ESNext",
    //в какую спеку компилировать, чтобы поддерживать большинство браузеров
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "strictNullChecks": true,
    //позволяет использовать esModules для пакетов, которые используют commonjs
    "esModuleInterop": true,
    //позволяет использовать дефолтный импорт вместо import * as '...'
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src", "config", "webpack.config.ts", "./config/jest/jest.config.ts"]
}
